@using TestTaskWishListAPP.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @model List<WishItem>
    
}

<div class="container mt-4">
    <h1>Wish List</h1>
    <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search...">
    <table class="table table-bordered table-hover" id="wishItemsTable">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date Added</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td contenteditable="true" onblur="editItem(@item.Id, 'Title', this.innerText, '@item.DateTimeAdd')">@item.Title</td>
                    <td contenteditable="true" onblur="editItem(@item.Id, 'Description', this.innerText, '@item.DateTimeAdd')">@item.Description</td>

                    <td>@item.DateTimeAdd.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <form method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id"/>
                            <button type="submit" asp-action="DeleteWishItem" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <form method="post" asp-action="CreateWishItem" asp-controller="Home" class="form-inline">
            <input type="text" name="title" class="form-control mr-2" placeholder="Title" required/>
            <input type="text" name="description" class="form-control mr-2" placeholder="Description" required/>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
        <div>
            <label for="itemsPerPage">Items per page:</label>
            <select id="itemsPerPage" class="form-control d-inline w-auto ml-2">
                <option>5</option>
                <option>10</option>
                <option>15</option>
                <option>20</option>
            </select>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#wishItemsTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        $("#itemsPerPage").change(function () {
            var itemsPerPage = parseInt($(this).val());
            paginateTable(itemsPerPage);
        });

        paginateTable(5); 
    });

    function paginateTable(itemsPerPage) {
        var rows = $("#wishItemsTable tbody tr");
        rows.show();

       
        $("#wishItemsTable .pager").remove();

        if (rows.length > itemsPerPage) {
            rows.slice(itemsPerPage).hide();

            var totalPages = Math.ceil(rows.length / itemsPerPage);
            var paginationHtml = '<tr class="pager"><td colspan="4"><nav><ul class="pagination justify-content-center">';

            for (var i = 1; i <= totalPages; i++) {
                paginationHtml += '<li class="page-item"><a class="page-link" href="#">' + i + '</a></li>';
            }

            paginationHtml += '</ul></nav></td></tr>';

            
            $("#wishItemsTable").append(paginationHtml);

            $(".pagination li:first").addClass("active");
            $(".pagination a").click(function (e) {
                e.preventDefault();
                var pageIndex = $(this).text() - 1;
                $(".pagination li").removeClass("active");
                $(this).parent().addClass("active");
                rows.hide().slice(pageIndex * itemsPerPage, (pageIndex + 1) * itemsPerPage).show();
            });
        }
    }


    function editItem(id, field, value, dateTime) {
        var data = {
            id: id
        };

        data[field.toLowerCase()] = value;

        $.ajax({
            url: '/Home/EditWishItem',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function () {
                console.log('Item updated successfully');
                
            },
            error: function (xhr, status, error) {
                console.error('Error:', error); 
            }
        });
    }
    
</script>